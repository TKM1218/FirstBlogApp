<% if user_signed_in? %>
  <% if tweet.like_user(current_user.id) %>
      <%= button_to tweet_like_path(tweet, tweet_id: tweet.id), method: :delete, id: "like-button", remote: true do %>
      <i class="fas fa-heart"></i>
      <span>
        <%= tweet.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to tweet_likes_path(tweet), id: "like-button", remote: true do %>
      <i class="fas fa-heart"></i>
      <span>
        <%= tweet.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-heart"></i>
    <span>
      <%= tweet.likes_count %>
    </span>
<% end %>

