
<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @tweets.each do |tweet| %>
    <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>
  <% end %>
  <% provide(:title, @user.name) %>
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <%= paginate(@tweets) %>
</div>
