<div class="col s6">
  <div class="card horizontal">
    <div class="card-image">
      <%= image_tag tweet.image %>
    </div>
    <div class="card-stacked">
      <div class="card-content #e8eaf6 indigo lighten-5">
        <%= tweet.text %>
      </div>
      <div class="card-action #1a237e indigo darken-4">
        <%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %>
        <%= link_to '編集', "/tweets/#{tweet.id}/edit" %>
        <%= link_to '削除', "/tweets/#{tweet.id}/destroy", method: :delete %>
        <%= render partial: "likes/like", locals: { tweet: tweet } %>
      </div>
    </div>
  </div>
</div>

